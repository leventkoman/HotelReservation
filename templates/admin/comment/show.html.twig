{% extends 'adminbase.html.twig' %}

{% block title %}Yorumlar{% endblock %}

{% block body %}

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">

            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Yorumlar</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i></button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i></button>
                    </div>
                </div>
                <div class="card-body">

                    <table id="example2" class="table table-bordered table-hover">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ comment.id }}</td>
                        </tr>
                        <tr>
                            <th>Subject</th>
                            <td>{{ comment.subject }}</td>
                        </tr>
                        <tr>
                            <th>Comment</th>
                            <td>{{ comment.comment }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ comment.status }}</td>
                        </tr>
                        <tr>
                            <th>Ip</th>
                            <td>{{ comment.ip }}</td>
                        </tr>
                        <tr>
                            <th>Userid</th>
                            <td>{{ comment.userid }}</td>
                        </tr>
                        <tr>
                            <th>Created_at</th>
                            <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Updated_at</th>
                            <td>{{ comment.updatedAt ? comment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Rate</th>
                            <td>{{ comment.rate }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a class="btn btn-block btn-info" href="{{ path('admin_comment_index') }}">Listeye Dön</a>

                    <a class="btn btn-block btn-info" href="{{ path('admin_comment_edit', {'id': comment.id}) }}">Düzenle</a>

                    {{ include('admin/comment/_delete_form.html.twig') }}
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    Footer
                </div>
                <!-- /.card-footer-->
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

{% endblock %}

