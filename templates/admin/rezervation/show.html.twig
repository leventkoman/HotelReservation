{% extends 'adminbase.html.twig' %}

{% block title %}Yeni Hotel{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Rezervasyon Oluştur</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i></button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i></button>
                    </div>
                </div>
                <div class="card-body">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rezervation[0].id }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td><a href="{{ path('admin_user_show',{'id':rezervation[0].userid}) }}">
                        {{ rezervation[0].username }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Hotel</th><td>
                    <a href="{{ path("userhotel_show",{"id":rezervation[0].hotelid}) }}">
                        {{ rezervation[0].hname }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Room</th><td>{{ rezervation[0].rname }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ rezervation[0].name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ rezervation[0].surname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ rezervation[0].email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ rezervation[0].phone }}</td>
            </tr>
            <tr>
                <th>Checkin</th>
                <td>{{ rezervation[0].checkin ? rezervation[0].checkin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Checkout</th>
                <td>{{ rezervation[0].checkout ? rezervation[0].checkout|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Days</th>
                <td>{{ rezervation[0].days }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ rezervation[0].total }}</td>
            </tr>
            <tr>
                <th>Ip</th>
                <td>{{ rezervation[0].ip }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ rezervation[0].message }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ rezervation[0].note }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ rezervation[0].status }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ rezervation[0].created_at ? rezervation[0].created_at|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ rezervation[0].updated_at ? rezervation[0].updated_at|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-block btn-info" href="{{ path('admin_rezervation_edit', {'id': rezervation[0].id}) }}">Düzenle</a>

    {{ include('admin/rezervation/_delete_form.html.twig') }}
    </div>
    </div>

    </section>
    </div>
    <script src="{{ asset('assets') }}/admin/plugins/jquery/jquery.min.js"></script>
    <script src="{{ asset('assets') }}/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="{{ asset('assets') }}/admin/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script src="{{ asset('assets') }}/admin/dist/js/adminlte.min.js"></script>
    <script src=".{{ asset('assets') }}/admin/dist/js/demo.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            bsCustomFileInput.init();
        });
    </script>
{% endblock %}

