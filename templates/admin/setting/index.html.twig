{% extends 'adminbase.html.twig' %}

{% block title %}Ayarlar Listele{% endblock %}

{% block body %}
    <script language= JavaScript type= text/javascript>
        function openWin(windowURl,windowName,windowFeatures){
            window.open(windowURl,windowName,windowFeatures);
        }
    </script>

    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">

                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="col-md-2">
                <a class="btn btn-block btn-success" href="{{ path('setting_new') }}">Yeni Ayarlar</a>
            </div>
            <br>
            <!-- Default box -->
            <div class="card">

                <div class="card-header">
                    <h3 class="card-title">Ayarlar</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i></button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i></button>
                    </div>
                </div>
                <div class="card-body">



                    <table id="example2" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Company</th>
                <th>Status</th>
                <th colspan="3" ><div align="center">Actions</div></th>
            </tr>
        </thead>
        <tbody>
        {% for setting in settings %}
            <tr>
                <td>{{ setting.id }}</td>
                <td>{{ setting.title }}</td>
                <td>{{ setting.company }}</td>
                <td>{{ setting.status }}</td>
                <td>
                    <a class="btn btn-info " href="{{ path('setting_show', {'id': setting.id}) }}">Göster</a>

                </td>
                <td>
                    <a class="btn btn-info " href="{{ path('setting_edit', {'id': setting.id}) }}">Düzenle</a>

                </td>
                <td>
                    <a class="btn btn-danger " href="{{ path('user_delete', {'id': setting.id}) }}">Sil</a>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="21">Kayıt Bulunamadı</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                </div>
            </div>

        </section>
    </div>
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>
{% endblock %}

