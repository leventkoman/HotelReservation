{% extends 'adminbase.html.twig' %}

{% block title %}Hotel Listele{% endblock %}

{% block body %}
<script language= JavaScript type= text/javascript>
    function openWin(windowURl,windowName,windowFeatures){
        window.open(windowURl,windowName,windowFeatures);
    }
</script>

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">

            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="col-md-2">
            <a class="btn btn-block btn-success" href="{{ path('admin_hotel_new') }}">Yeni Hotel</a>
        </div>

        <!-- Default box -->
        <div class="card">

            <div class="card-header">
                <h3 class="card-title">Hoteller</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="card-body">

                <table id="example2" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Hotelid</th>
                <th>Description</th>
                <th>Image</th>
                <th>Price</th>
                <th>Status</th>
                <th>Numberofroom</th>
                <th colspan="3" ><div align="center">Actions</div></th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.title }}</td>
                <td>{{ room.hotelid }}</td>
                <td>{{ room.description }}</td>
                <td>{{ room.image }}</td>
                <td>{{ room.price }}</td>
                <td>{{ room.status }}</td>
                <td>{{ room.numberofroom }}</td>
                <td>
                    <a class="btn btn-block btn-info " href="{{ path('admin_room_show', {'id': room.id}) }}">Göster</a>
                    <a class="btn btn-block btn-info " href="{{ path('admin_room_edit', {'id': room.id}) }}">Düzenle</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Kayıt Bulunamadı</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            </div>
        </div>

    </section>
</div>
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>
{% endblock %}

