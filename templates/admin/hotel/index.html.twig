{% extends 'adminbase.html.twig' %}

{% block title %}Hotel Listele{% endblock %}

{% block body %}
    <script language= JavaScript type= text/javascript>
        function openWin(windowURl,windowName,windowFeatures){
            window.open(windowURl,windowName,windowFeatures);
        }
        </script>

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">

            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="col-md-2">
            <a class="btn btn-block btn-success" href="{{ path('admin_hotel_new') }}">Yeni Otel</a>
        </div>
        <br>

        <!-- Default box -->
        <div class="card">

            <div class="card-header">
                <h3 class="card-title">Oteller</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i></button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i></button>
                </div>
            </div>
            <div class="card-body">



                <table id="example2" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>Title</th>
                <th>Image</th>
                <th>Star</th>

                <th>City</th>
                <th>Phone</th>
                <th>Email</th>
                <th>User</th>
                <th>Image Gallery</th>
                <th>Rooms</th>
                <th>Status</th>
                <th colspan="3" ><div align="center">Actions</div></th>
            </tr>
        </thead>
        <tbody>
        {% for hotel in hotels %}

            </script>
            <tr>
                <td>{{ hotel.id }}</td>
                <td>{{ hotel.catname }}</td>

                <td>{{ hotel.title }}</td>
                <td><img src="{{asset('uploads/images/' ~ hotel.image )}}" height="40">  </td>
                <td>{{ hotel.star }}</td>

                <td>{{ hotel.city }}</td>

                <td>{{ hotel.phone }}</td>
                <td>{{ hotel.email }}</td>

                <td>
                    <a href="{{ path('admin_user_show',{'id': hotel.userid}) }}">
                        {{ hotel.name }} {{ hotel.surname }}
                    </a>
                </td>

                <td>
                    <a href="javascript:openWin('{{ path('admin_image_new',{'id': hotel.id}) }}','','toolbar=no,directories=0,top=50,left=100,menubar=yes,location=no,resizable=no,height=600,width=900,scrollbars=yes,status=no');">
                        <img src="{{ asset('assets/admin/img') }}/image.png" title="Image Gallery" height="40">
                    </a>
                    {#<a href="#" onclick="window.open('{{ path('admin_image_new',{'id': hotel.id}) }}')">
                        <img src="{{ asset('assets/admin/img') }}/galery.png" height="40">
                    </a>#}
                </td>
                <td>
                    <a href="javascript:openWin('{{ path('admin_room_new',{'id': hotel.id}) }}','','toolbar=no,directories=0,top=50,left=100,menubar=yes,location=no,resizable=no,height=600,width=900,scrollbars=yes,status=no');">
                        <img src="{{ asset('assets/admin/img') }}/room.png" title="Rooms" height="40">
                    </a>
                    {#<a href="#" onclick="window.open('{{ path('admin_image_new',{'id': hotel.id}) }}')">
                        <img src="{{ asset('assets/admin/img') }}/galery.png" height="40">
                    </a>#}
                </td>

                <td>{{ hotel.status }}</td>
                <td>
                    <a class="btn btn-info " href="{{ path('admin_hotel_show', {'id': hotel.id}) }}">Göster</a>

                </td>
                <td>
                    <a class="btn btn-info " href="{{ path('admin_hotel_edit', {'id': hotel.id}) }}">Düzenle</a>

                </td>
                <td>
                    <a class="btn btn-danger " href="{{ path('admin_hotel_delete', {'id': hotel.id}) }}">Delete</a>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="17">Kayıt bulunamadı</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            </div>
        </div>

    </section>
</div>
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>
{% endblock %}

