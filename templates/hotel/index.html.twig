{% extends 'homebase.html.twig' %}

{% block title %}Hotel index{% endblock %}



{% block body %}
    <script language= JavaScript type= text/javascript>
        function openWin(windowURl,windowName,windowFeatures){
            window.open(windowURl,windowName,windowFeatures);
        }
    </script>

    <section id="subintro">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <ul class="breadcrumb">
                        <li><a href="#"><i class="icon-home"></i></a><i class="icon-angle-right"></i></li>
                        <li><a href="#">Blog</a><i class="icon-angle-right"></i></li>
                        <li class="active">Blog with left sidebar</li>
                    </ul>
                </div>
                <div class="span4">
                    <div class="search">
                        <form class="input-append">
                            <input class="search-form" id="appendedPrependedInput" type="text" placeholder="Search here.." />
                            <button class="btn btn-dark" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="maincontent">
        <div class="container">
            <div class="row">
                {% include ('user/usermenu.html.twig') %}

                <article class="blog-post">

                    <div class="row">


                        <div class="span8">
                            <div class="col-md-2">
                                <a class="btn btn-block btn-success" href="{{ path('userhotel_new') }}">Yeni Otel</a>
                            </div>
                            <div class="post-heading">

                                <h3><a href="#">Kullanıcı Otel Listesi</a></h3>
                            </div>
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Image</th>
                                    <th>Star</th>
                                    <th>City</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Image Gallery</th>
                                    <th>Status</th>
                                    <th colspan="3" ><div align="center">Actions</div></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for hotel in hotels %}

                                    </script>
                                    <tr>
                                        <td>{{ hotel.id }}</td>
                                        <td>{{ hotel.title }}</td>
                                        <td><img src="{{asset('uploads/images/' ~ hotel.image )}}" height="40">  </td>
                                        <td>{{ hotel.star }}</td>
                                        <td>{{ hotel.city }}</td>

                                        <td>{{ hotel.phone }}</td>
                                        <td>{{ hotel.email }}</td>


                                        <td>
                                            <a href="javascript:openWin('{{ path('admin_image_new',{'id': hotel.id}) }}','','toolbar=no,directories=0,top=50,left=100,menubar=yes,location=no,resizable=no,height=600,width=900,scrollbars=yes,status=no');">
                                                <img src="{{ asset('assets/admin/img') }}/image.png" height="40">
                                            </a>
                                            {#<a href="#" onclick="window.open('{{ path('admin_image_new',{'id': hotel.id}) }}')">
                        <img src="{{ asset('assets/admin/img') }}/galery.png" height="40">
                    </a>#}
                                        </td>

                                        <td>{{ hotel.status }}</td>
                                        <td>
                                            <a class="btn btn-info " href="{{ path('userhotel_show', {'id': hotel.id}) }}">Göster</a>

                                        </td>
                                        <td>
                                            <a class="btn btn-info " href="{{ path('userhotel_edit', {'id': hotel.id}) }}">Düzenle</a>

                                        </td>
                                        <td>
                                            <a class="btn btn-danger " href="{{ path('userhotel_delete', {'id': hotel.id}) }}">Sil</a>
                                        </td>

                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="17">Kayıt bulunamadı</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>


                        </div>
                    </div>
                </article>
            </div>
        </div>
    </section>
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>
{% endblock %}
