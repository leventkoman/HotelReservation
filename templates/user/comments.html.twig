{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} {{ app.user.surname }} - Profile{% endblock %}

{% block body %}

    <section id="subintro">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <ul class="breadcrumb">
                        <li><a href="#"><i class="icon-home"></i></a><i class="icon-angle-right"></i></li>
                        <li><a href="#">Blog</a><i class="icon-angle-right"></i></li>
                        <li class="active">Blog with left sidebar</li>
                    </ul>
                </div>
                <div class="span4">
                    <div class="search">
                        <form class="input-append">
                            <input class="search-form" id="appendedPrependedInput" type="text" placeholder="Search here.." />
                            <button class="btn btn-dark" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="maincontent">
        <div class="container">
            <div class="row">
                {% include ('user/usermenu.html.twig') %}

                <article class="blog-post">

                    <div class="row">
                        <div class="span8">
                            <div class="post-heading">
                                <h3><a href="#">Kullanıcı Yorum Listesi</a></h3>
                            </div>
                            <table class="table">
                                <thead>
                                <tr>

                                    <th>Konu</th>
                                    <th>Yorum</th>
                                    <th>Durumu</th>


                                    <th>Otel</th>
                                    <th>Puan</th>
                                    <th>İşlem</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for comment in comments %}
                                    <tr>

                                        <td>{{ comment.subject }}</td>
                                        <td>{{ comment.comment }}</td>
                                        <td>{{ comment.status }}</td>


                                        <td><a href="{{ path('userhotel_show', {'id': comment.hotelid}) }}">{{ comment.title }}</a></td>

                                        <td>{{ comment.rate }}</td>
                                        <td>
                                            <a href="" class="btn btn-danger">Sil</a>
                                        </td>
                                    </tr>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="10">Kayıt Bulunamadı</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </article>
            </div>
        </div>
    </section>
{% endblock %}
