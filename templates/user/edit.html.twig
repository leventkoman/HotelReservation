{% extends 'homebase.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <section id="subintro">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <ul class="breadcrumb">
                        <li><a href="#"><i class="icon-home"></i></a><i class="icon-angle-right"></i></li>
                        <li><a href="#">Blog</a><i class="icon-angle-right"></i></li>
                        <li class="active">Blog with left sidebar</li>
                    </ul>
                </div>
                <div class="span4">
                    <div class="search">
                        <form class="input-append">
                            <input class="search-form" id="appendedPrependedInput" type="text" placeholder="Search here.." />
                            <button class="btn btn-dark" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="maincontent">
        <div class="container">
            <div class="row">
                {% include ('user/usermenu.html.twig') %}

                <article class="blog-post">

                    <div class="row">
                        <div class="span8">
                            <div class="post-heading">
                                <h3><a href="#">Kullanıcı Profil Düzenle</a></h3>
                            </div>

                            {{ include('user/_form.html.twig', {'button_label': 'Güncelle'}) }}
                            <table>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </table>

                            <a class="btn btn-block btn-info" href="{{ path('user_index') }}">Listeye Dön</a><br>

                            {{ include('user/_delete_form.html.twig') }}
                        </div>
                    </div>
                </article>
            </div>
        </div>
    </section>
{% endblock %}
